<div class="pl-15">
  <h2>Forgot your password?</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %><br />
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="form-group">
  <div class="col-sm-6 col-sm-offset-2">
    <%= render "devise/shared/links" %>
  </div>
</div>